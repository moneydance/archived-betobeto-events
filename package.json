{
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettify"
    }
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prettify": "prettier --write './**/src/**/*.{ts,tsx}'",
    "test:unit": "jest --testPathPattern='/__tests__/.*.unit.spec.tsx?$'",
    "test:unit:watch": "jest --watchAll --testPathPattern='/__tests__/.*.unit.spec.tsx?$'",
    "test:integration": "jest --runInBand --testPathPattern='/__tests__/.*.integration.spec.tsx?$'",
    "test:integration:watch": "jest --watchAll --runInBand --testPathPattern='/__tests__/.*.integration.spec.tsx?$'"
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@types/jest": "^23.3.10",
    "@types/node": "^11.13.7",
    "babel-jest": "^24.8.0",
    "dotenv": "^7.0.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lerna": "^3.13.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^6.0.0",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "ttypescript": "^1.5.6",
    "typescript": "^3.2.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
